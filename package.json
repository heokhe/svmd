{
  "name": "svmd",
  "version": "0.1.0",
  "description": "Material design components for Svelte",
  "module": "dist/index.mjs",
  "main": "dist/index.js",
  "scripts": {
    "build": "rollup -c config/prod.js && rm dist/.csstemp",
    "build:dev": "rollup -wc config/dev.js",
    "serve": "sirv -p 8080 -H 0.0.0.0 -s",
    "serve:dev": "npm run serve -- -D",
    "start": "run-p serve:dev build:dev",
    "prepublishOnly": "npm run build",
    "docs": "node docs/generator/index.js"
  },
  "devDependencies": {
    "@hkh12/eslint-config": "^1.0.1",
    "eslint": "^6.1.0",
    "eslint-plugin-svelte3": "^2.7.3",
    "globby": "^10.0.1",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "postcss-import": "^12.0.1",
    "rollup": "^1.11.0",
    "rollup-plugin-commonjs": "^10.0.1",
    "rollup-plugin-livereload": "^1.0.1",
    "rollup-plugin-node-resolve": "^4.2.4",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-svelte": "^5.0.0",
    "rollup-plugin-terser": "^5.1.1",
    "sirv-cli": "^0.4.4",
    "svelte": "^3.6.10",
    "sveltedoc-parser": "^2.1.0"
  },
  "dependencies": {
    "@material/button": "^3.1.0",
    "@material/drawer": "^3.1.0",
    "@material/fab": "^3.1.0",
    "@material/form-field": "^3.1.0",
    "@material/icon-button": "^3.1.0",
    "@material/layout-grid": "^3.1.0",
    "@material/list": "^3.1.0",
    "@material/ripple": "^3.1.0",
    "@material/slider": "^3.1.0",
    "@material/switch": "^3.1.0",
    "@material/tab": "^3.1.0",
    "@material/tab-bar": "^3.1.0",
    "@material/tab-indicator": "^3.1.0",
    "@material/tab-scroller": "^3.1.0",
    "@material/textfield": "^3.1.0",
    "@material/top-app-bar": "^3.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hkh12/svmd.git"
  },
  "keywords": [
    "svelte",
    "svelte-components",
    "material-design"
  ],
  "author": {
